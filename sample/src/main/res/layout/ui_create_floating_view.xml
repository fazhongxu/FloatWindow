<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_floating_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-80dp"
        android:layout_marginBottom="-80dp">

        <RelativeLayout
            android:id="@+id/rl_floating_create_bg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:alpha="0.5"
            android:background="@drawable/shape_floating_create_normal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_floating_create"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_floating_create" />

                <TextView
                    android:id="@+id/tv_floating_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浮窗"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>